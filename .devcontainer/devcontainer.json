{
    "name": "ROS2 Dev Env",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".",
        "args": {
            "ROS_DISTRO": "humble"
        }
    },
    "runArgs": ["--network=host"],
    "workspaceMount": "source=${localWorkspaceFolder},target=/home/rosdev/workspace_host,type=bind",
    "workspaceFolder": "/home/rosdev/ros_ws",
    "containerEnv": {
        "DISPLAY": "${localEnv:DISPLAY}",
        "ROS_DOMAIN_ID": "7",
        "ROS_DISTRO": "humble"
    },
    "mounts": [
        {
            "source": "ros-rosdep-cache",
            "target": "/home/rosdev/.ros",
            "type": "volume"
        },
        {
            "source": "ros-workspace-build",
            "target": "/home/rosdev/ros_ws/build",
            "type": "volume"
        },
        {
            "source": "ros-workspace-install",
            "target": "/home/rosdev/ros_ws/install",
            "type": "volume"
        },
        {
            "source": "/tmp/.X11-unix",
            "target": "/tmp/.X11-unix",
            "type": "bind"
        },
        {
            "source": "${localEnv:XAUTHORITY:-$HOME/.Xauthority}",
            "target": "/home/rosdev/.Xauthority",
            "type": "bind"
        },
        {
            "source": "${localEnv:HOME}/.bash_history",
            "target": "/home/rosdev/.bash_history",
            "type": "bind"
        },
        {
            "source": "${localWorkspaceFolder}/bags",
            "target": "/home/rosdev/ros_ws/bags",
            "type": "bind"
        }
    ],
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash",
                "python.defaultInterpreterPath": "/usr/bin/python3",
                "files.watcherExclude": {
                    "**/build/**": true,
                    "**/install/**": true,
                    "**/log/**": true
                },
                "cmake.configureOnOpen": false
            },
            "extensions": [
                "mhutchie.git-graph",
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.black-formatter",
                "ms-vscode.cpptools",
                "ms-vscode.cmake-tools",
                "twxs.cmake",
                "redhat.vscode-xml",
                "redhat.vscode-yaml"
            ]
        }
    },
    "postCreateCommand": "/home/rosdev/ros_ws/scripts/post-create.sh",
    "remoteUser": "rosdev"
}